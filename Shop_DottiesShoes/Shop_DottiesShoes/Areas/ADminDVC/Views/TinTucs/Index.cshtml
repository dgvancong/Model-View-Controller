@model IEnumerable<Shop_DottiesShoes.Models.TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ADminDVC/Views/Shared/_Layout.cshtml";
}

<title>QL Tin Tức</title>
<h3>Tin Tức</h3>

<p>
    @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-primary fa fa-plus" })
</p>
<table class="table table-bordered table-striped" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TieuDe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayThang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GhiChu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TieuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayThang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @Class = "btn btn-warning fa fa-pencil" })
                @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @Class = "btn btn-info fa fa-eye" })
                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @Class = "btn btn-danger fa fa-trash", @Onclick = "return confirm'Bạn có chắc chắn muốn xóa khách hàng này không?'" })
            </td>
        </tr>
        }
    </tbody>

</table>
@section scripts{
    <!-- Page level plugins -->
    <script src="/Assets/ADmin/ADThay/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/ADmin/ADThay/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/Assets/ADmin/ADThay/js/demo/datatables-demo.js"></script>
}