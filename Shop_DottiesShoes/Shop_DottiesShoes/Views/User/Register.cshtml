@model Shop_DottiesShoes.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="/Assets/Website/Css/About.css">
</head>

<div class="d-flex justify-content-center section group">
    <div class="col-9">
        @using (Html.BeginForm("Register", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

